# TTS Audio Generation Environment Variables
# Copy this to .env and fill in your values
# NEVER commit .env or *.key.json files

# Path to Google Cloud service account JSON file
GOOGLE_APPLICATION_CREDENTIALS=

# Google Cloud project ID
GCLOUD_PROJECT_ID=

# Lithuanian TTS voice name
# See: https://cloud.google.com/text-to-speech/docs/voices
TTS_VOICE=lt-LT-Standard-A

# Speaking rates
TTS_SPEAKING_RATE_NORMAL=1.0
TTS_SPEAKING_RATE_SLOW=0.7

# Audio encoding (LINEAR16 for WAV, OGG_OPUS for OGG)
TTS_AUDIO_ENCODING=OGG_OPUS
