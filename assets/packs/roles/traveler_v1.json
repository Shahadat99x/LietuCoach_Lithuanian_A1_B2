      "dialogues": [
        {
          "id": "airport_checkin",
          "title": "Checking In",
          "durationMinutes": 2,
          "difficulty": "Easy",
          "turns": [
            {
              "speaker": "A",
              "ltText": "Labas rytas. Kur skrendate?",
              "enText": "Good morning. Where are you flying?",
              "audioNormalPath": "assets/audio/roles/traveler/airport/checkin_01.mp3"
            },
            {
              "speaker": "B",
              "ltText": "Labas rytas. Į Vilnių.",
              "enText": "Good morning. To Vilnius.",
              "audioNormalPath": "assets/audio/roles/traveler/airport/checkin_02.mp3"
            },
            {
              "speaker": "A",
              "ltText": "Ar turite bagažo?",
              "enText": "Do you have luggage?",
              "audioNormalPath": "assets/audio/roles/traveler/airport/checkin_03.mp3"
            },
            {
              "speaker": "B",
              "ltText": "Taip, vieną lagaminą.",
              "enText": "Yes, one suitcase.",
              "audioNormalPath": "assets/audio/roles/traveler/airport/checkin_04.mp3"
            },
            {
              "speaker": "A",
              "ltText": "Padėkite jį čia. Ačiū. Štai jūsų bilietas.",
              "enText": "Put it here. Thank you. Here is your ticket.",
              "audioNormalPath": "assets/audio/roles/traveler/airport/checkin_05.mp3"
            },
            {
              "speaker": "B",
              "ltText": "Ačiū. Viso gero.",
              "enText": "Thank you. Goodbye.",
              "audioNormalPath": "assets/audio/roles/traveler/airport/checkin_06.mp3"
            }
          ],
          "exercises": [
            {
              "type": "mcq",
              "promptLt": "Kur keleivis skrenda?",
              "promptEn": "Where is the passenger flying?",
